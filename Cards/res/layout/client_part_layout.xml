<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/client_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/night"
    tools:context="${relativePackage}.${activityClass}" >

  <ImageView
      android:id="@+id/chatBubble"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/chat_bubble"
        android:scaleType="fitEnd" />

  <TextView
      android:id="@+id/coinsView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/scoreView"
        android:layout_marginLeft="130dp"
        android:text="0"
        android:textColor="#FFFF66"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

  <TextView
      android:id="@+id/information"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/chatBubble"
        android:layout_marginLeft="45dp"
        android:text="Welcome!"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        android:textStyle="bold|italic" />

  <TextView
      android:id="@+id/scoreView"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="130dp"
        android:text="0"
        android:textColor="#FFFF66"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

  <TextView
      android:id="@+id/nameTextView"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="10dp"        
        android:text="name"
        android:gravity="center"
        android:textColor="#FFFF66"
        android:textSize="30dp"
        android:textStyle="bold|italic" />

  <ImageView
      android:id="@+id/coinIcon"
      android:layout_width="40dp"
      android:layout_height="40dp"
      android:layout_alignBottom="@+id/coinsView"
      android:layout_marginLeft="50dp"
      android:src="@drawable/money" />

  <Button
      android:id="@+id/instructionbutton"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_alignParentRight="true"
      android:layout_above="@+id/quitbutton"
      android:layout_marginBottom="3dp"
      android:text="Instruction"
      android:textSize="15dp"
      android:textColor="#FFFFFF"
      android:textStyle="bold|italic" />

  <Button
      android:id="@+id/skipbutton"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_alignParentRight="true"
      android:layout_above="@+id/exchangebutton"
      android:layout_marginBottom="3dp"      
      android:text="SKIP"
      android:textSize="15dp"
      android:textColor="#FFFFFF"
      android:textStyle="bold|italic" />

  <Button
      android:id="@+id/exchangebutton"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_above="@+id/instructionbutton"
      android:layout_marginBottom="3dp"
      android:layout_alignLeft="@+id/instructionbutton"
      android:text="Exchange"
      android:textSize="15dp"
      android:textColor="#000000"
      android:textStyle="bold|italic" />

  <Button
      android:id="@+id/quitbutton"
      android:layout_width="100dp"
      android:layout_height="50dp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentRight="true"
      android:text="QUIT"
      android:textSize="15dp"
      android:textColor="#FFFFFF"
      android:textStyle="bold|italic" />

</RelativeLayout>
